<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tson.yd.dao.BookDao">

    <insert id="insertBook" parameterType="com.tson.yd.model.book.InsertBootEntity">
        INSERT
        book
        (
        userId,
        bookId,
        title,
        splash,
        img,
        content
        )
        VALUES
        (
        #{userId},
        #{bookId},
        #{title},
        #{splash},
        #{img},
        #{content}
        )
    </insert>

    <delete id="deleteBook">
        DELETE
        FROM book
        WHERE userId = #{userId}
          AND bookId = #{bookId}
    </delete>

    <update id="updateBook" parameterType="com.tson.yd.model.book.InsertBootEntity">
        UPDATE book
        SET
        <if test="title!=null">
            title=#{title},
        </if>
        <if test="splash!=null">
            splash=#{splash},
        </if>
        <if test="img!=null">
            img=#{img},
        </if>
        <if test="content!=null">
            content=#{content},
        </if>
        <if test="openType!=null">
            openType=#{openType},
        </if>
        bookId=#{bookId}
        WHERE userId=#{userId} AND bookId=#{bookId}
    </update>

    <select id="queryBook" resultType="com.tson.yd.model.book.BookEntity">
        SELECT *
        FROM book
        WHERE userId = #{userId}
          AND bookId = #{bookId}
    </select>

    <select id="queryBooksByUser" resultType="com.tson.yd.model.book.BookEntity">
        SELECT *
        FROM book
        WHERE userId = #{userId}
    </select>

    <select id="queryBookByOpenType" resultType="com.tson.yd.model.book.BookEntity">
        SELECT *
        FROM book
        WHERE openType = #{isOpen}
    </select>

    <select id="search" parameterType="com.tson.yd.model.book.request.SearchRequest" resultType="com.tson.yd.model.book.BookEntity">
        SELECT *
        FROM book
        where concat(title, content) like '%${keyword}%'
          AND openType = #{openType}
    </select>

</mapper>