<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tson.yd.dao.UserDao">

    <sql id="BASE_TABLE">
        user
    </sql>

    <sql id="BASE_COLUMN">
        id,
        userName,
        userId,
        img,
        sex,
        province,
        city,
        area,
        address,
        description,
        tel,
        userType,
        UNIX_TIMESTAMP(createTime) createTime,
        UNIX_TIMESTAMP(updateTime) updateTime
    </sql>

    <select id="queryUsers" resultType="com.tson.yd.model.UserEntity">
        SELECT
          <include refid="BASE_COLUMN"/>
        FROM
          <include refid="BASE_TABLE"/>
    </select>

    <select id="queryUserById" resultType="com.tson.yd.model.UserEntity">
        SELECT
          <include refid="BASE_COLUMN"/>
        FROM
          <include refid="BASE_TABLE"/>
        WHERE userId = #{userId}
    </select>

    <insert id="insertUser" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.tson.yd.model.UserEntity">
        INSERT INTO
            `user`(userName,userId,img,sex,province,city,area,address,description,tel,createTime,updateTime)
        VALUES
        (#{userName},#{userId},#{img},#{sex},#{province},#{city},#{area},#{address},#{description},#{tel},
         FROM_UNIXTIME(#{createTime}, '%Y-%m-%d %h:%i:%s'),FROM_UNIXTIME(#{updateTime}, '%Y-%m-%d %h:%i:%s'))
    </insert>

</mapper>